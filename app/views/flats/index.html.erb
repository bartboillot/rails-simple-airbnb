<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p>All <%= @flats.length %> flats.</p>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4 d-flex">
      <div class="flat-card d-flex flex-column">
        <div class="flat-card-image" style="background-image: url(<%= flat.image_link %>);"></div>
        <div class="flat-card-content flex-fill">
          <div>
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <div class="d-flex align-items-center">
              <i class="fas fa-user-friends mr-2"></i>
              <span><%= flat.number_of_guests %></span>
            </div>
            <div class="d-flex ml-3 align-items-center">
              <i class="fas fa-euro-sign mr-2"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to "More info", flat_path(flat)%>
          <%= link_to "Edit", edit_flat_path(flat), class: "ml-3 text-warning"%>
          <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "ml-3 text-danger"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
