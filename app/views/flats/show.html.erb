<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @flat.image_link %>);">
</div>
<div class="container mt-n5">
  <div class="row">
    <div class="col-8 d-flex flex-column">
      <div class="flat-show-content">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-content flex-fill">
        <h3>Description</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-content">
        <h5>Book this flat!</h5>
        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="flat-show-content">
        <h5>Details</h5>
        <div class="d-flex">
          <div class="d-flex align-items-center">
            <i class="fas fa-user-friends mr-2"></i>
            <span><%= @flat.number_of_guests %></span>
          </div>
          <div class="d-flex ml-3 align-items-center">
            <i class="fas fa-euro-sign mr-2"></i>
            <span><%= @flat.price_per_night %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
